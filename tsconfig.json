{
  "compilerOptions": {
    // Build settings.
    "jsx": "react",
    "target": "es2015",

    // Type definition settings.
    "lib": [ "es2017" ],
    "skipLibCheck": true,

    // TSLib settings.
    "importHelpers": true,

    // Module resolution settings.
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
